pipeline {
    agent any
    
    stages {
        stage('Checkout Git') {
            steps {
                git branch: 'main', url: 'file:///e/WEBTECH PROJ'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Run Tests') {
            steps {
                sh 'npm test || echo "Tests not configured"'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t webtech-app .'
            }
        }
        
        stage('Deploy to Local') {
            steps {
                sh 'docker-compose down || true'
                sh 'docker-compose up -d --build'
            }
        }
        
        stage('Verify Deployment') {
            steps {
                sh 'sleep 10'
                sh 'curl http://localhost:3019/health || echo "App verification"'
            }
        }
    }
    
    post {
        always {
            echo "Build finished: ${currentBuild.result}"
        }
        success {
            echo '✅ Application deployed successfully at http://localhost:3019'
        }
        failure {
            echo '❌ Pipeline failed - check console output'
        }
    }
}